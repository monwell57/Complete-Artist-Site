{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/(shop)/shop/[category]/page.jsx",
    "src/app/(shop)/shop/components/ImageGallery.jsx",
    "src/app/(shop)/shop/product/[slug]/page.jsx",
    "src/app/(shop)/shop/components/AddToBag.jsx",
    "src/app/(shop)/shop/components/CheckoutNow.jsx",
    "src/app/(shop)/shop/components/ShoppingCartModal.jsx",
    "src/app/(shop)/shop/stripe/success/page.jsx",
    "src/app/(shop)/shop/stripe/error/page.jsx"
  ],
  "exclude": ["node_modules"]
}
